#:import color_creator color_creator
#:import settings settings
#:import Window kivy.core.window.Window


<LayoutWarningLanguage>:
    size_hint: None, None
    size: Window.width, self.height_depend_language_aviable
    canvas.before:
        Color:
            rgba: root.red, root.green, root.blue, root.alpha
        Rectangle:
            pos: self.pos
            size: self.size
    Widget: #Dummy widget to set a space between the icon and the right window border
        size_hint: None, None
        size: dp(5), 0
    Image:
        size_hint: None, None
        pos_hint: {"center_y": 0.5}
        size: root.icon_size, root.icon_size
        source: "images/close_warning.png"
    Label:
        text: root.text_warning

<TabbedPanelItemMainGui@TabbedPanelItem>:
    background_normal: ''
    background_down: ''
    background_color: root.tabs_color if self.state == "down" else (0.35, 0.35, 0.35, 1) #(0.1, 0.8, 0.15, 1)


<MainTabbedPanel>:
    canvas.before:
        Color:
            rgba: 0.35, 0.35, 0.35, 1
        Rectangle:
            pos: self.pos
            size: self.size

    do_default_tab: False
    tab_width: Window.width/3
    tab_pos: "top_mid"

    TabbedPanelItemMainGui:
        text: root.tab_images

    TabbedPanelItemMainGui:
        text: root.tab_color
        ColorInterface:

    TabbedPanelItemMainGui:
        text: root.tab_settings
        SettingsInterface: